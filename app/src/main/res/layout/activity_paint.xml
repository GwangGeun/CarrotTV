<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.18"
        >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/그림판"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="11dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/현재색상"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp" />

        <TextView
            android:id="@+id/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3sp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textView16"
            android:text="@string/검정색" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_memo"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.52"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:background="#E3E3E3"
        >

        <Button
            android:id="@+id/btn_undo"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:background="@drawable/undo"
            android:layout_marginTop="13dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.08"
        android:layout_marginTop="15sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:text="@string/굵기"
            android:textSize="15sp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:layout_marginStart="10sp"
            android:thumb="@drawable/seekbar_seekbar1_thumb"
            android:progressDrawable="@drawable/seekbar_seekbar1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.1"
        android:layout_marginTop="15sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_black"
            android:layout_width="0sp"
            android:layout_height="35sp"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/black"
            android:contentDescription="@string/nothing" />

        <ImageView
            android:id="@+id/image_blue"
            android:layout_width="0sp"
            android:layout_height="35sp"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/blue"
            android:contentDescription="@string/nothing" />

        <ImageView
            android:id="@+id/image_yellow"
            android:layout_width="0sp"
            android:layout_height="35sp"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/yellow"
            android:contentDescription="@string/nothing"/>

        <ImageView
            android:id="@+id/image_red"
            android:layout_width="0sp"
            android:layout_height="35sp"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/red"
            android:contentDescription="@string/nothing"/>

        <ImageView
            android:id="@+id/image_green"
            android:layout_width="0sp"
            android:layout_height="35sp"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/green"
            android:contentDescription="@string/nothing"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.12"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_save03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/저장하기"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_back03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/돌아가기"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</LinearLayout>