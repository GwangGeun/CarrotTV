<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#EDEDED"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="0.25"
        android:layout_marginStart="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        >

        <ImageView
            android:id="@+id/crawling_image"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:contentDescription="@string/broadcast"
            app:srcCompat="@mipmap/ic_launcher" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="0.75"
        android:layout_marginLeft="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="8sp"
        android:layout_marginRight="10sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/crawling_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="이번 여름에는..." />

        <TextView
            android:id="@+id/crawling_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3sp"
            android:textSize="13sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="내용.....내용...." />

        <TextView
            android:id="@+id/crawling_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3sp"
            android:textSize="11sp"
            android:textColor="#353535"
            android:layout_marginEnd="10sp"
            android:ellipsize="end"
            android:layout_gravity="right"
            android:maxLines="1"
            android:text="중앙일보" />

        <TextView
            android:id="@+id/hidden_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/bj_id" />

    </LinearLayout>


</LinearLayout>